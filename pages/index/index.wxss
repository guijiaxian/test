/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  font-size: 16px;
  color:#333333;
  clear:both; 
  margin:auto;
  margin-right: 20px;
}

.caption {
  vertical-align: middle;
  font-size: 16px;
  color:#333333;
  clear:both; 
  margin:auto;
  margin-left: 10px;
}

.cell {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 128rpx;
  margin: 0rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}